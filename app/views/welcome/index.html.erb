<h2>HERE!</h2>

<%= link_to "load something", "#", :id => "ajax-load" %>

<%= link_to "load script", something_path, :remote => true %>

<%= link_to 'load json', something_path, :id =>'ajax-json' %>

<div id="content"></div>

<script>

  $("#ajax-json").click(function(e){
    e.preventDefault();
    var url = $(this).attr("href");
    $.ajax({
      url: url,
      dataType: 'json',
      success: function(data){
        console.log(data)
      }
    })
  })

  $("#ajax-load").on("click", function(e){

    $.ajax({
      url: "/something",
      success: function(data) {
        $("#content").html(data)
      }
    })

  });

</script>
