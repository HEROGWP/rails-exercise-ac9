<h2>Real-time Messages</h2>

<%= form_for Message.new, :remote => true do |f| %>

  <%= f.label :content %>
  <%= f.text_field :content %>

  <%= f.submit "Send", :class => "btn btn-primary" %>

<% end %>

<ul id="message-list">
<% @messages.each do |m| %>
  <li><%= m.content %></li>
<% end %>
</ul>
