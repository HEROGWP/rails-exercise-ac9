<h2>Topic list</h2>

<p><%= link_to "New Post", new_topic_path, :class => "btn btn-primary" %></p>

<div id="content">
</div>

<table class="table">
<% @topics.each do |t| %>
<tr id="topic-<%= t.id %>">
  <td>
      <%= link_to t.title, topic_path(t) %>
      <%= link_to "preview", topic_path(t), :class => "preview btn btn-sm btn-default", :remote => true %>

      <% t.likes.each do |like| %>
        <%= like.try(:user).try(:email) %>
      <% end %>
  </td>
  <td><%= t.created_at %></td>
  <td>
    <%= link_to "Edit", edit_topic_path(t), :class => "btn btn-default" %>
    <%= link_to "Delete", topic_path(t), :method => "delete", :class => "btn btn-danger", :remote => true %>
  </td>
</tr>
<% end %>

</table>

<%= paginate @topics %>
