<% if @topic.errors.any? %>
  <ul>
  <% @topic.errors.full_messages.each do |m| %>
    <li><%= m %></li>
  <% end %>
</ul>
<% end %>

<%= form_for @topic do |f| %>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :category_ids %>
    <%#= f.collection_check_boxes(:category_ids, Category.all, :id, :name) %>

    <%= f.select :category_ids, Category.all.map{ |c| [c.name, c.id] }, {}, { :multiple => true, :class => "form-control" } %>
  </div>

  <div class="form-group">
    <%= f.label :user_id %>
    <%= f.select :user_id, User.all.map{ |u| [u.email, u.id] }, {}, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :content %>
    <%= f.text_area :content, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= f.submit :class => "btn btn-primary" %>
  </div>

<% end %>


<script>
  $("#topic_user_id").select2();

  $("#topic_category_ids").select2();

</script>
